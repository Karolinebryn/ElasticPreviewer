<!-- ko with: elastic -->
<div class="jumbotron">
    <h1>ElasticPreviewer</h1>
    <p class="lead">A simple tool to compare the search results of your Elasticsearch queries.</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Elasticsearch info</h2>
        <p>Fill out the information about your Elasticsearch server and search query</p>
        @*<p data-bind="text: myHometown"></p>*@

        <form class="form-horizontal" role="form" data-bind="submit: doSearch">
            <div class="form-group">
                <label for="input-serverurl" class="col-md-2">Server</label>
                <div class="col-md-12">
                    <input data-bind="value: server" type="text" id="input-serverurl" class="form-control" style="min-width: 100%;" />
                </div>
            </div>
            <div class="form-group">
                <label for="textarea-query" class="col-md-12">Query</label>
                <div class="col-md-12">
                    <textarea data-bind="value: searchQuery" id="textarea-query" class="form-control" style="min-width: 100%; min-height: 400px;"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary" value="Check" />
                </div>
            </div>
        </form>

    </div>

    <div class="col-md-6">
        <h2>The result</h2>
        <p> The result of your query. </p>

        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="textarea-result" class="col-md-12">Result</label>
                <div class="col-md-12">
                    <textarea id="textarea-result" data-bind="text: result" class="form-control" style="min-width: 100%; min-height: 475px;"></textarea>
                </div>
            </div>
        </form>


    </div>
</div>

<!-- /ko -->

<div class="row">
    <div class="col-md-12">
        <h2>History</h2>
        <p>The searches you have previously made (only kept for this session, the data is not stored anywhere)</p>
    </div>
</div>
